---
import logo from "@/assets/logo.png";
import s from "./header.module.css";
const baseUrl = import.meta.env.BASE_URL;
---

<div
  class="text-white flex relative justify-center gap-14 py-5 items-center border-b border-neutral-700"
>
  <div class="flex">
    <div class="flex items-center justify-center gap-3 relative">
      <div
        class="animate-fade-in text-balance bg-gradient-to-br from-30% to-black/40 bg-clip-text font-semibold tracking-tighter text-transparent dark:from-white dark:to-white/40 text-4xl"
      >
        <h1 class={s.title}>Startify</h1>
      </div>
      <img src={logo.src} alt={"Startify"} class="h-[50px]" />
      <div
        class="pointer-events-none relative !rotate-[62deg] text-nowrap transform animate-fade-in text-xs rounded-full bg-surface shadow md:block"
      >
        <div class="absolute top-0 -left-12">
          <h1 class={s.title}>Alpha Version</h1>
        </div>
      </div>
    </div>
  </div>
  <a href={baseUrl}>Home</a>
  <a href=`${baseUrl}/policy`>Privacy Policy</a>
  <a
    href="https://github.com/PawelGawlikDev/startify"
    class="fill-white absolute top-0 right-0"
    style="fill-opacity: 0.2;"
  >
    <svg
      xmlns="http://www.w3.org/2000/svg"
      xmlns:xlink="http://www.w3.org/1999/xlink"
      viewBox="0 0 60.5 60.5"
      width="60"
      height="60"
    >
      <polygon class="bg" points="60.5,60.5 0,0 60.5,0 "></polygon>
      <path
        class="icon"
        d="M43.1,5.8c-6.6,0-12,5.4-12,12c0,5.3,3.4,9.8,8.2,11.4c0.6,0.1,0.8-0.3,0.8-0.6c0-0.3,0-1,0-2c-3.3,0.7-4-1.6-4-1.6c-0.5-1.4-1.3-1.8-1.3-1.8c-1.1-0.7,0.1-0.7,0.1-0.7c1.2,0.1,1.8,1.2,1.8,1.2c1.1,1.8,2.8,1.3,3.5,1c0.1-0.8,0.4-1.3,0.8-1.6c-2.7-0.3-5.5-1.3-5.5-5.9c0-1.3,0.5-2.4,1.2-3.2c-0.1-0.3-0.5-1.5,0.1-3.2c0,0,1-0.3,3.3,1.2c1-0.3,2-0.4,3-0.4c1,0,2,0.1,3,0.4c2.3-1.6,3.3-1.2,3.3-1.2c0.7,1.7,0.2,2.9,0.1,3.2c0.8,0.8,1.2,1.9,1.2,3.2c0,4.6-2.8,5.6-5.5,5.9c0.4,0.4,0.8,1.1,0.8,2.2c0,1.6,0,2.9,0,3.3c0,0.3,0.2,0.7,0.8,0.6c4.8-1.6,8.2-6.1,8.2-11.4C55.1,11.2,49.7,5.8,43.1,5.8z"
      ></path>
    </svg>
  </a>
</div>
